@model List<User>



<a href="/User/Add" class="btn btn-primary">Add User</a>
<nav class="navbar bg-body-tertiary">
    <div class="container-fluid">
        <form asp-controller="User" asp-action="Search" method="post" class="d-flex mb-3">
            <input type="search" name="Query" class="form-control me-2" placeholder="Search for Customer..." />
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>
</nav>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <th scope="row">@item.Name</th>
                <th scope="row">
                    <a href="/User/Details/@item.Id" class="btn btn-outline-primary">Details</a>
                </th>
                <th scope="row">
                    <a href="/User/Edit/@item.Id" class="btn btn-outline-primary">Edit</a>
                </th>
                <th scope="row">
                    <a href="/User/Delete/@item.Id" class="btn btn-outline-danger">Delete</a>
                </th>
            </tr>
        }
    </tbody>
</table>
<a href="/User/Index" class="btn btn-primary">Back</a>

