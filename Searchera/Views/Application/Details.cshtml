@model Application 
@{
    ViewData["Title"] = "Details";
}
<div class="container">
	<h1>User Details</h1>
	<table class="table">
		<thead>
			<tr>
				<th scope="col">ID</th>
				<th scope="col">Name</th>
				<th scope="col">Cover Letter</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>@Model.Id</td>
				<td>@Model.ResumeLink</td>
				<td>@Model.CoverLetter</td>
			</tr>
		</tbody>
	</table>
	<a href="/Application/Index" class="btn btn-primary">Back</a>
</div>
